<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/update_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <EditText
        android:id="@+id/update_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_title"
        android:hint="Description" />

    <EditText
        android:id="@+id/update_assignee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_title"
        android:hint="Assignee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/save_item_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>

        <Button
            android:id="@+id/completed_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed" />

        <Button
            android:id="@+id/incomplete_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mark as incomplete" />

        <Button
            android:id="@+id/delete_item_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <TextView
            android:id="@+id/update_resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resources" />

        <ListView
            android:id="@+id/resource_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>


</LinearLayout>